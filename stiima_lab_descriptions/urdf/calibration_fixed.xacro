<?xml version="1.0"?>


<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="calibration_fixed_joint" params="parent child  *origin">


    <link name="${child}_x" />
    <link name="${child}_y" />
    <link name="${child}_z" />
    <link name="${child}_rz" />
    <link name="${child}_ry" />

    <joint name="${child}_joint_x" type="prismatic">
      <parent link="${parent}" />
      <child link = "${child}_x" />
      <xacro:insert_block name="origin"/>
      <axis xyz="1 0 0" />
      <limit effort="1000.0" lower="-0.5" upper="0.5" velocity="0.5"/>
    </joint>

    <joint name="${child}_joint_y" type="prismatic">
      <parent link="${child}_x" />
      <child link = "${child}_y" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <axis xyz="0 1 0" />

      <limit effort="1000.0" lower="-0.5" upper="0.5" velocity="0.5"/>
    </joint>

    <joint name="${child}_joint_z" type="prismatic">
      <parent link="${child}_y" />
      <child link = "${child}_z" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <axis xyz="0 0 1" />

      <limit effort="1000.0" lower="-0.5" upper="0.5" velocity="0.5"/>
    </joint>
    <joint name="${child}_joint_rz" type="revolute">
      <parent link="${child}_z" />
      <child link = "${child}_rz" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <axis xyz="0 0 1" />

      <limit effort="1000.0" lower="-${pi}" upper="${pi}" velocity="0.5"/>
    </joint>

<joint name="${child}_joint_ry" type="revolute">
  <parent link="${child}_rz" />
  <child link = "${child}_ry" />
  <origin xyz="0 0 0" rpy="0 0 0" />
  <axis xyz="0 1 0" />

  <limit effort="1000.0" lower="-${pi}" upper="${pi}" velocity="0.5"/>
</joint>

<joint name="${child}_joint_rx" type="revolute">
  <parent link="${child}_ry" />
  <child link = "${child}" />
  <origin xyz="0 0 0" rpy="0 0 0" />
  <axis xyz="1 0 0" />

  <limit effort="1000.0" lower="-${pi}" upper="${pi}" velocity="0.5"/>
</joint>


  </xacro:macro>
</robot>
